@using WebUI.Areas.User.Helpers
@model ProfileAboutViewModel
@{
    var user = Model.ProfileUser;
}
<div class="tab-pane fade active show" id="hobbiesViewTab">
    <div class="top-box d-flex justify-content-between align-items-center">
        <h4>Hobbies and Interests</h4>
        @if (Model.IsOwner)
        {
            <button class="p-2 d-flex flex-column justify-content-center align-item-center btn btn-primary section-edit-btn" data-view="#hobbiesViewTab"
                    data-edit="#hobbiesEditTab">
                <i class="ph ph-pencil-simple"></i>
            </button>
        }
    </div>
    <hr>
    @if (user.UserProfileInfo == null)
    {
        <p>No information entered.</p>
    }
    @if (ProfileVisibilityHelper.CanViewAboutInfo(Model, ProfileField.Hobbies) && user.UserProfileInfo?.Hobbies != null)
    {
        <h5 class="mb-1">Hobbies:</h5>
        <p>@user.UserProfileInfo?.Hobbies</p>
    }
    @if (ProfileVisibilityHelper.CanViewAboutInfo(Model, ProfileField.FavoriteMovies) && user.UserProfileInfo?.FavoriteMovies != null)
    {
        <h5 class="mb-1">Favorite Movies:</h5>
        <p>@user.UserProfileInfo?.FavoriteMovies</p>
    }
    @if (ProfileVisibilityHelper.CanViewAboutInfo(Model, ProfileField.FavoriteGames) && user.UserProfileInfo?.FavoriteGames != null)
    {
        <h5 class="mb-1">Favorite Games:</h5>
        <p>@user.UserProfileInfo?.FavoriteGames</p>
    }
    @if (ProfileVisibilityHelper.CanViewAboutInfo(Model, ProfileField.FavoriteBooks) && user.UserProfileInfo?.FavoriteBooks != null)
    {
        <h5 class="mb-1">Favorite Books:</h5>
        <p>@user.UserProfileInfo?.FavoriteBooks</p>
    }
    @* User Fav Music *@
</div>

<div class="tab-pane fade" id="hobbiesEditTab">
    <div class="top-box d-flex justify-content-between align-items-center">
        <h4>Edit - Hobbies and Interests</h4>
        <button type="button" class="p-2 d-flex flex-column justify-content-center align-item-center btn btn-danger section-cancel-btn" data-view="#hobbiesViewTab"
                data-edit="#hobbiesEditTab">
            <i class="fa-solid fa-arrow-left"></i>
        </button>
    </div>
    <hr>
    <form asp-action="UpdateHobbies" method="post">
        <div class="mb-3">
            <label class="form-label">Hobbies</label>
            <textarea name="Bio" class="form-control" style="max-height:80px"
                      placeholder="Write down your hobbies">@user.UserProfileInfo?.Hobbies</textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Favorite Movies</label>
            <textarea name="Bio" class="form-control" style="max-height:80px"
                      placeholder="Write down your favorite movies">@user.UserProfileInfo?.FavoriteMovies</textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Favorite Games</label>
            <textarea name="Bio" class="form-control" style="max-height:80px"
                      placeholder="Write down your favorite games">@user.UserProfileInfo?.FavoriteGames</textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Favorite Books</label>
            <textarea name="Bio" class="form-control" style="max-height:80px"
                      placeholder="Write down your favorite books">@user.UserProfileInfo?.FavoriteBooks</textarea>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-3">
            <button type="button" class="btn btn-outline-secondary section-cancel-btn" data-view="#hobbiesViewTab" data-edit="#hobbiesEditTab">
                Cancel
            </button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </form>
</div>