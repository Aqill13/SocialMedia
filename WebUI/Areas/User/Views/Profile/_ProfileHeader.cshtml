@using WebUI.Areas.User.Helpers
@using static EntityLayer.Entities.UserSocialLink
@model ProfileBaseViewModel
@{
    var user = Model.ProfileUser;
    var username = user.UserName;
    var links = Model.SocialLinks;
    var isOwner = Model.IsOwner;
    var totalSocialLinks = Enum.GetValues(typeof(SocialPlatform)).Length;
    var usedPlatforms = new HashSet<SocialPlatform>(links.Select(x => x.Platform));
}
<style>
    .social-data-block li i {
        font-size: 18px;
        color: var(--bs-primary);
        transition: color 0.3s;
        border-radius: 50%;
        border: 1px solid var(--bs-primary);
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

        .social-data-block li i:hover {
            color: #fff;
            background-color: var(--bs-primary);
        }
</style>

<div class="col-sm-12">
    <!-- user haqda -->
    <div class="card profile-box">
        <div class="card-body">
            <div class="row align-items-center item-header-content">
                <div class="col-lg-4 profile-left">
                    <ul class="user-meta list-inline p-0 d-flex align-items-center justify-content-center">
                        <li>
                            <h5>@user.PostsCount</h5>Posts
                        </li>
                        <li>
                            <h5>@user.FollowersCount</h5>Followers
                        </li>
                        <li>
                            <h5>@user.FollowingCount</h5>Following
                        </li>
                    </ul>
                </div>
                <div class="col-lg-4 text-center profile-center">
                    <div class="header-avatar position-relative d-inline-block">
                        @if (isOwner)
                        {
                            <span id ="headerProfileImgBtn" class="change-profile-image bg-primary rounded-pill d-flex flex-column justify-content-center align-items-center cursor-pointer"
                                  data-bs-toggle="tooltip" data-bs-placement="right" data-bs-title="Change the profile image">
                                <i class="ph ph-camera fs-5 text-white" onclick="document.getElementById('imageUploadInp').click()"></i>
                            </span>
                            <input type="file" id="imageUploadInp" onchange="openCropperModal(event)" class="d-none" />
                        }
                        <img src="@user.ImageUrl" alt="user" id="headerProfileImg"
                             class="avatar-150 border border-4 border-white rounded-3">
                    </div>

                    <h5 class="d-flex align-items-center justify-content-center gap-1 mb-2">
                        @user.FirstName @user.LastName
                    </h5>

                    <ul class="d-flex align-items-center justify-content-center gap-3 list-inline p-0 m-0">
                        <li class="d-flex align-items-center gap-1">
                            <i class="fa-regular fa-user"></i>
                            @user.UserName
                        </li>
                        <li class="d-flex align-items-center gap-1">
                            <i class="fa-regular fa-envelope"></i>
                            @user.Email
                        </li>
                    </ul>

                    @if (ProfileVisibilityHelper.CanViewAboutInfo(Model, ProfileField.SocialLinks))
                    {
                        <div class="social-links mt-3 d-flex justify-content-center align-items-center">
                            <ul id="social-data-block" class="social-data-block d-flex align-items-center justify-content-center gap-3 list-inline p-0 m-0">

                                @foreach (var link in links)
                                {
                                    var iconClass = link.Platform switch
                                    {
                                        SocialPlatform.Instagram => "fa-brands fa-instagram",
                                        SocialPlatform.Facebook => "fa-brands fa-facebook-f",
                                        SocialPlatform.Github => "fa-brands fa-github",
                                        SocialPlatform.Linkedin => "fa-brands fa-linkedin-in",
                                        SocialPlatform.Twitter => "fa-brands fa-x-twitter",
                                        SocialPlatform.Youtube => "fa-brands fa-youtube",
                                        _ => "ph ph-globe"
                                    };

                                    <li class="text-center">
                                        <a href="@link.Url">
                                            <i class="@iconClass"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                            @if (Model.IsOwner && !links.Any())
                            {
                                <div id="noSocialLinksPlaceholder" class="text-center text-muted small mt-2">
                                    You haven't added a social media account yet.
                                    <br />
                                    <button type="button"
                                            class="btn btn-link p-0 text-decoration-none"
                                            data-bs-toggle="modal"
                                            data-bs-target="#addSocialLinkModal">
                                        Add a social account
                                    </button>
                                </div>
                            }
                            @if (Model.IsOwner && totalSocialLinks > links.Count)
                            {
                                <button type="button" id="AddasocialaccountLink"
                                        class="btn btn-link p-0 text-decoration-none ms-3"
                                        data-bs-toggle="modal"
                                        data-bs-target="#addSocialLinkModal">
                                    <i class="fa-solid fa-plus me-1"></i>Add
                                </button>
                            }
                        </div>
                    }
                </div>

                <div class="col-lg-4 profile-right text-lg-end text-center mt-3 mt-lg-0">
                    @if (isOwner)
                    {
                        <button class="btn btn-outline-secondary rounded-3 fs-6">
                            <i class="fa-solid fa-pen-to-square me-2"></i>
                            Edit profile
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-primary rounded-3 fs-6 me-3">
                            <i class="fa-solid fa-user-plus me-2"></i>
                            Follow
                        </button>
                        <button class="btn btn-primary-subtle rounded-3 fs-6">
                            <i class="fa-regular fa-message me-2"></i>
                            Message
                        </button>
                    }
                </div>

            </div>
        </div>
    </div>

    <!-- user tablari -->
    @if (isOwner || !user.IsPrivate || Model.IsFriend)
    {
        @await Html.PartialAsync("_ProfileTabs", Model)
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="d-flex gap-3 align-items-center justify-content-center fs-4">
                    <i class="fa-solid fa-lock"></i>
                    This account is private
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="addSocialLinkModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add social account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="addSocialLinkForm">
                <div class="modal-body">

                    <div class="mb-3">
                        <label class="form-label">Platform</label>
                        <select class="form-select" name="platform" id="platform">
                            @foreach (SocialPlatform value in Enum.GetValues(typeof(UserSocialLink.SocialPlatform)))
                            {
                                @if (!usedPlatforms.Contains(value))
                                {
                                    <option value="@((int)value)">@value</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Profile URL</label>
                        <input type="url" name="url" id="socialUrl" class="form-control"
                               placeholder="https://instagram.com/username" />
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>

<div class="modal fade" id="profileImageCropModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Adjust profile image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="cropper-container-wrapper" style="max-height:400px; overflow:hidden;">
                    <img id="profileImageCropTarget" src="" style="max-width:100%; display:block;">
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" onclick="uploadCroppedProfileImage()">Save</button>
            </div>

        </div>
    </div>
</div>