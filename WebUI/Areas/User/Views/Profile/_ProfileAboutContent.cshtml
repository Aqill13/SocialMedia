@model ProfileAboutViewModel
<div class="col-sm-12">
    <div class="tab-content">
        <div class="tab-pane fade show active" id="about" role="tabpanel">
            <div class="row gy-3">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column nav nav-pills basic-info-items list-unstyled p-0 m-0">
                                @await Html.PartialAsync("_AboutLeftMenu", Model)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <div id="profileTabContent" class="tab-content active show">
                                @await Html.PartialAsync("_AboutRightContent", Model)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>