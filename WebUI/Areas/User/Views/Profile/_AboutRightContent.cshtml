@model ProfileAboutViewModel

@if (Model.ActiveSection == "profile" && Model.ActiveSubSection == "personal")
{
    @await Html.PartialAsync("_AboutPersonalInfo", Model)
}
@if (Model.ActiveSection == "profile" && Model.ActiveSubSection == "hobbies")
{
    @await Html.PartialAsync("_AboutHobbies", Model)
}
@if (Model.ActiveSection == "profile" && Model.ActiveSubSection == "workeducation")
{
    @await Html.PartialAsync("_AboutWorkEducation", Model)
}
@if (Model.ActiveSection == "account" && Model.ActiveSubSection == "visibility")
{
    @await Html.PartialAsync("_AboutVisibility", Model.VisibilityViewModel)
}


