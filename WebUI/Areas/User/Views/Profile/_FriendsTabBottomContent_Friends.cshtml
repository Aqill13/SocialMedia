@model ProfileFriendsViewModel

<div class="tab-pane fade show active" id="friends-list" role="tabpanel"
     aria-labelledby="friends-tab">
    <div class="friend-list-tab card my-0 gap-3">
        <div class="thread d-flex flex-wrap align-items-start justify-content-between p-3 bg-body rounded gap-3">
            <div class="d-flex gap-3 align-items-center">
                <img class="avatar-60 rounded-pill align-top"
                     src="~/html/assets/images/user/05.jpg" loading="lazy">
                <div class="d-inline-block">
                    <a href="javascript:void(0);">
                        <h6 class="d-flex fs-4 align-items-center gap-1">
                            Petey Cruiser
                            <img src="~/html/assets/images/small/verifyIcon.svg" alt="verified-icon">
                        </h6>
                    </a>
                    <div class="d-flex flex-wrap align-item-center justify-content-between gap-3">
                        <div class="mb-0 font-size-14 text-body d-flex align-items-center justify-content-center gap-2">
                            <i class="ph ph-map-pin fs-5"></i><span class="text-body location-text">
                                New
                                York,US
                            </span>
                        </div>
                        <div class="mb-0 font-size-14 text-body d-flex align-items-center justify-content-center gap-2">
                            <i class="ph ph-calendar-blank fs-5"></i><span class="text-body time-text">a minute ago</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-start justify-content-start gap-3 action-btns">
                <a class="rounded-2 btn btn-warning px-2 py-1 font-size-14 text-white"
                   href="javascript:void(0);">Unfriends</a>
                <a href="javascript:void(0);" class="message-btn" data-bs-toggle="tooltip"
                   data-bs-placement="top" data-bs-original-title="Message">
                    <i class="ph ph-envelope-simple fs-4"></i>
                </a>
            </div>
        </div>
    </div>
</div>
